        async function rejeitarSugestao(id) {
            const motivo = prompt('Por que est√° rejeitando esta sugest√£o?');
            if (!motivo) return;

            try {
                const response = await fetch(`${API_URL}/dao/sugestoes/${id}/rejeitar`, {
                    method: 'POST',
