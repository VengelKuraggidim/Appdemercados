                        <div style="display: inline-block; background: #fff3cd; color: #856404; padding: 6px 12px; border-radius: 8px; font-size: 13px; margin-top: 10px;">
                            üí∞ ${s.tokens_escrow} tokens em escrow
                        </div>
                    ` : ''}

                    ${s.moderador_implementador ? `
                        <div style="background: #e7f3ff; padding: 10px; border-radius: 8px; margin: 10px 0; font-size: 13px;">
                            üëÆ <strong>Moderador:</strong> ${s.moderador_implementador}
                            ${s.status === 'implementada' ? ' ‚Ä¢ <span style="color: #4CAF50;">Implementa√ß√£o conclu√≠da</span>' : ' ‚Ä¢ <span style="color: #2196F3;">Trabalhando na implementa√ß√£o</span>'}
                        </div>
                    ` : ''}

                    ${s.status === 'aprovada' && usuarioAtual === 'Vengel' ? `
                        <div style="margin-top: 15px;">
                            ${!s.moderador_implementador ? `
                                <button onclick="aceitarImplementar(${s.id})" style="background: #4CAF50; color: white; border: none; padding: 10px 20px; border-radius: 8px; cursor: pointer; font-size: 14px;">
                                    üõ†Ô∏è Aceitar Implementar (Receber ${s.tokens_escrow} tokens)
                                </button>
                            ` : ''}
                        </div>
                    ` : ''}

                    ${s.status === 'em_implementacao' && s.moderador_implementador === usuarioAtual ? `
                        <div style="margin-top: 15px;">
                            <button onclick="marcarImplementada(${s.id})" style="background: #2196F3; color: white; border: none; padding: 10px 20px; border-radius: 8px; cursor: pointer; font-size: 14px;">
