        // Vota√ß√£o
        let sugestoesCache = [];

        function abrirModalVotoId(id) {
            const sugestao = sugestoesCache.find(s => s.id === id);
            if (sugestao) {
                abrirModalVoto(id, sugestao.titulo, sugestao.descricao);
