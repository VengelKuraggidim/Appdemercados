        }

        function filtrarSugestoes(status) {
            carregarSugestoes(status);
        }

        async function criarSugestao() {
            const titulo = document.getElementById('sugestao-titulo').value.trim();
            const descricao = document.getElementById('sugestao-descricao').value.trim();

            if (!titulo || !descricao) {
                alert('Preencha t√≠tulo e descri√ß√£o');
                return;
            }

            // Validar tamanhos m√≠nimos
            if (titulo.length < 5) {
                alert('‚ùå O t√≠tulo precisa ter no m√≠nimo 5 caracteres');
                return;
            }

            if (descricao.length < 10) {
                alert('‚ùå A descri√ß√£o precisa ter no m√≠nimo 10 caracteres');
                return;
            }

            if (titulo.length > 200) {
                alert('‚ùå O t√≠tulo n√£o pode ter mais de 200 caracteres');
                return;
            }

            if (descricao.length > 2000) {
                alert('‚ùå A descri√ß√£o n√£o pode ter mais de 2000 caracteres');
                return;
            }

            if (!usuarioAtual || usuarioAtual === 'An√¥nimo') {
                alert('Fa√ßa login na p√°gina principal para criar sugest√µes');
                return;
            }

            try {
                const response = await fetch(`${API_URL}/dao/sugestoes`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        usuario_nome: usuarioAtual,
                        titulo,
                        descricao
                    })
                });

                if (response.ok) {
                    const data = await response.json();
                    document.getElementById('sugestao-titulo').value = '';
                    document.getElementById('sugestao-descricao').value = '';
                    alert(`‚úÖ Sugest√£o criada!

5 tokens foram bloqueados em escrow.
Aguardando aprova√ß√£o de um moderador.`);
                    carregarSugestoes();
                    atualizarSaldo();
                } else {
                    const errorData = await response.json();
                    alert(`‚ùå Erro ao criar sugest√£o: ${errorData.detail || 'Erro desconhecido'}`);
                }
            } catch (error) {
                console.error('Erro:', error);
                alert('‚ùå Erro ao criar sugest√£o: ' + error.message);
            }
        }

        async function aprovarSugestao(id) {
            try {
                const response = await fetch(`${API_URL}/dao/sugestoes/${id}/aprovar`, {
                    method: 'POST',
