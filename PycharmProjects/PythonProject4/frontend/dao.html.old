        function abrirModalVoto(id, titulo, descricao) {
            sugestaoAtual = id;
            document.getElementById('modal-titulo').textContent = titulo;
            document.getElementById('modal-descricao').textContent = descricao;
            document.getElementById('modal-voto').classList.add('show');
        }

        function fecharModalVoto() {
            document.getElementById('modal-voto').classList.remove('show');
            sugestaoAtual = null;
        }

        document.getElementById('tokens-voto').addEventListener('input', (e) => {
            const tokens = parseInt(e.target.value) || 1;
            const votos = Math.floor(Math.sqrt(tokens));
            document.getElementById('votos-gerados').textContent = votos;
        });

        async function votarSugestao(favor) {
            const tokens = parseInt(document.getElementById('tokens-voto').value) || 1;

            if (!usuarioAtual || usuarioAtual === 'An√¥nimo') {
                alert('Fa√ßa login para votar');
                return;
            }

            try {
                const response = await fetch(`${API_URL}/dao/votar`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        sugestao_id: sugestaoAtual,
                        usuario_nome: usuarioAtual,
                        tokens_usados: tokens,
                        voto_favor: favor
                    })
                });

                const data = await response.json();

                if (response.ok) {
                    alert(`‚úÖ ${data.mensagem}\nSaldo restante: ${data.saldo_restante} tokens`);
                    fecharModalVoto();
                    carregarSugestoes();
                } else {
                    alert(`‚ùå ${data.detail || 'Erro ao votar'}`);
                }
