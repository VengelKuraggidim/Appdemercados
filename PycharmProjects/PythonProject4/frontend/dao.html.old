                        motivo
                    })
                });

                if (response.ok) {
                    alert('Sugest√£o rejeitada');
                    carregarSugestoes();
                }
            } catch (error) {
                console.error('Erro:', error);
            }
        }

        // Moderadores - Aceitar Implementar
        async function aceitarImplementar(id) {
            if (!confirm('Deseja aceitar implementar esta sugest√£o? Voc√™ receber√° os tokens em escrow ap√≥s concluir.')) return;

