                const stats = await statsResponse.json();
                const todasSugestoes = await sugestoesResponse.json();

                // Filtrar sugest√µes por status
                const emImplementacao = todasSugestoes.filter(s => s.status === 'em_implementacao');
                const implementadas = todasSugestoes.filter(s => s.status === 'implementada');
                const aprovadas = todasSugestoes.filter(s => s.status === 'aprovada');

                let html = `
                    <div class="card">
