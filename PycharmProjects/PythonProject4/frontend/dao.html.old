            `;
        }

        // Utilidades
        function traduzirStatus(status) {
            const traducoes = {
                'pendente_aprovacao': '‚è≥ Pendente',
                'em_votacao': 'üó≥Ô∏è Em Vota√ß√£o',
                'aprovada': '‚úÖ Aprovada',
                'em_implementacao': 'üõ†Ô∏è Trabalhando',
                'implementada': 'üéâ Conclu√≠da',
                'rejeitada': '‚ùå Rejeitada',
                'cancelada': 'üö´ Cancelada'
            };
            return traducoes[status] || status;
        }

        function formatarData(dataString) {
            const data = new Date(dataString);
            const agora = new Date();
            const diffMs = agora - data;
            const diffMins = Math.floor(diffMs / 60000);
            const diffHoras = Math.floor(diffMs / 3600000);
            const diffDias = Math.floor(diffMs / 86400000);

            if (diffMins < 1) return 'Agora';
            if (diffMins < 60) return `${diffMins} min atr√°s`;
            if (diffHoras < 24) return `${diffHoras}h atr√°s`;
            if (diffDias === 1) return 'Ontem';
            if (diffDias < 7) return `${diffDias} dias atr√°s`;
            return data.toLocaleDateString('pt-BR');
        }

        // Carregar ao iniciar
        carregarComentarios();
    </script>
